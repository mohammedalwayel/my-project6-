        android:layout_width="match_parent"
        android:layout_height="232dp"
        app:srcCompat="@drawable/asear_ahar_gab" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9A000000"
